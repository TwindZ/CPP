NAME = PmergeMe

SRCS =	main.cpp		\
		PmergeMe.cpp	\

OBJS_DIR = ./objs/
SRCS_DIR = ./srcs/
OBJS = $(SRCS:%.cpp=$(OBJS_DIR)%.o)

CFLAGS = -Wall -Wextra -Werror -std=c++98

CC = c++

GREEN = \033[1;32m
RED = \033[1;31m
NC = \033[0;0m

all: $(NAME)
$(OBJS_DIR)%.o:$(SRCS_DIR)%.cpp
	
	@mkdir -p $(OBJS_DIR)
	@$(CC) $(CFLAGS) -c -o $@ $<

$(NAME): $(OBJS)

	@$(CC) $(CFLAGS) $(OBJS) -o $(NAME)
	@echo "${GREEN}$(NAME) COMPILED${NC}"

run: re

	@echo "${GREEN}$(NAME) RUN${NC}"
	./$(NAME) 17 158 49 84 185 154 166 52 196 21 184 192 198 67 66 56 71 92 124 24 18 97 9 105 190 147 151 87 33 187 35 102 115 183 122 125 142 46 177 108 139 165 6 186 128 141 74 68 173 4 50 110 134 188 25 95 45 200 120 69 44 100 20 42 59 140 78 178 41 7 57 40 144 73 2 58 155 106 43 174 168 88 32 14 114 195 150 89 72 179 61 62 175 77 161 90 94 23 81 119 156 0 163 12 191 22 37 91 27 153 148 1 189 172 31 159 79 10 101 109 171 85 15 83 130 160 98 55 38 75 197 93 54 149 162 47 111 157 145 127 107 53 135 63 96 118 131 82 99 121 64 13 113 65 137 194 104 180 193 70 133 129 29 19 16 112 146 3 199 39 26 30 80 103 182 181 136 143 60 132 36 48 76 169 123 170 34 167 116 51 28 164 152 126 117 5 8 86 176 11 138 17 158 49 84 185 154 166 52 196 21 184 192 198 67 66 56 71 92 124 24 18 97 9 105 190 147 151 87 33 187 35 102 115 183 122 125 142 46 177 108 139 165 6 186 128 141 74 68 173 4 50 110 134 188 25 95 45 200 120 69 44 100 20 42 59 140 78 178 41 7 57 40 144 73 2 58 155 106 43 174 168 88 32 14 114 195 150 89 72 179 61 62 175 77 161 90 94 23 81 119 156 0 163 12 191 22 37 91 27 153 148 1 189 172 31 159 79 10 101 109 171 85 15 83 130 160 98 55 38 75 197 93 54 149 162 47 111 157 145 127 107 53 135 63 96 118 131 82 99 121 64 13 113 65 137 194 104 180 193 70 133 129 29 19 16 112 146 3 199 39 26 30 80 103 182 181 136 143 60 132 36 48 76 169 123 170 34 167 116 51 28 164 152 126 117 5 8 86 176 11 138
leaks: re 
	valgrind --leak-check=full --show-leak-kinds=all ./$(NAME)
	rm -rf ./$(NAME).dSYM

clean:

	@rm -rf $(OBJS_DIR)
	@echo "${RED}$(NAME) OBJECTS DELETED${NC}"

fclean: clean

	@rm -f $(NAME)
	@echo "${RED}$(NAME) EXECUTABLE DELETED${NC}"

bonus: re

re: fclean all

.PHONY: all clean fclean bonus re run